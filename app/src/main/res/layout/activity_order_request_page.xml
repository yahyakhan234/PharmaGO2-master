<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Buy_Requests">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/primaryTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="PharmaGO"
            android:textColor="#fff"
            android:textSize="30sp"

            android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy Request From XYZ"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:padding="20dp"
            />


    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hydromycin 100mg"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty 10 Tablets"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CaC 1000 plus"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty 1 Bottle"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chloroquill 200mg"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty 5 Tablets"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amoxyl 50mg"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty 5 Tablets"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thyroxin"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty 1 bottle"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/side_note"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

        </RelativeLayout>

</LinearLayout>
</ScrollView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Order"
        android:id="@+id/accept_order"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/primaryTheme"
        style="@android:style/Widget.Material.Button.Colored"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Deny Order"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="@color/primaryTheme"
        style="@android:style/Widget.Material.Button.Colored"/>

</RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location Of customer: (2 KM away from your location)"
        android:textSize="15sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
</RelativeLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/locCus"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/primaryTheme"
            android:layout_marginTop="20dp"
            app:itemIconTint="#fff"
            app:itemTextColor="#fff"
            app:menu="@menu/bottom_navigation_menu" />


    </RelativeLayout>



</LinearLayout>